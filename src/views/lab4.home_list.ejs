<html lang="en">
    <head>
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        <title>Nguyễn Văn Mạnh</title>
        </head>
    
        <title>Product Page</title>
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <!-- Custom CSS -->
        <link rel="stylesheet" href="/css/style.css">
        </head>
        <style>
        
        </style>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">FPT Poly</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
     
        <li class="nav-item active">
            <a class="nav-link" href="/" >Trang chủ</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="#" >Quản lý bài viết</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="#" >Đăng xuất</a>
        </li>
      </ul>
    </div>
  </nav>
  <!-- Product List -->
  <div class="container-fluid">
    <div class="row d-flex align-items-stretch" id="place">
        <div class="row col-8">
            <div class="col-1 h5">#</div>
            <div class="col-3 h5">Tiêu đề</div>
            <div class="col-4 h5">Ngày cập nhật</div>
            <div class="col-4 h5">Thao tác</div>

            <% posts.forEach(element => { %>
              
                <div class="col-1"><%= element.id %> </div>
                <div class="col-3 title"><%= element.title %></div>
                <div class="col-4"><%= element.updateAt?element.updateAt:'Chưa cập nhật!' %></div>
                <div class="col-4"><button class="btn">Xóa</button> <button class="btn">Sửa</button></div>

                <!-- <div class="col-md-3 h-100 py-3" >
                  <div class="card">
                    <a href="/product/<%= element.idProduct  %>">
                      <img class="card-img-top img-fluid" src="/images/<%= element.images %>" alt="<%= element.nameProduct %>" style="width: 100%!important;height: 100%!important;" >
                      <div class="card-body">
                          <h5 class="card-title"><%= element.nameProduct %> </h5>
                          <p class="card-text"><%= element.description %></p>
                          <p class="card-text">Price: $ <span class="price"><%= element.priceProduct %></span> </p>
                          <a  class="btn btn-primary buy">Buy Now</a>
                      </div>
                    </a>
                    </div>
                </div> -->
            
              <% }) %>
        </div>
        <div class="row col-4">
            <div class="" >
                <div class="h2 text-center">Thêm - Sửa bài viết</div>
                <form action="" method="post" id="frm" class="p-1"> 
                    <div class="form-group">
                        <input type="text" name="title" id="title" placeholder="Tiêu đề bài viết" class="form-control"> <br>
                    </div>
                    <div class="form-group" >
                        <textarea name="body" id="body" class="form-control" placeholder="Nội dung bài viết" > </textarea>
                    </div>
                    <div class="form-group" >
                        <input type="submit" class="form-control btn-primary" value="Lưu bài viết" name="submit" class="btn">

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

  <!-- Footer -->
  <footer class="bg-light py-3 fixed-bottom" >
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <p>&copy; 2023 MyStore, Inc. All rights reserved.</p>
        </div>
        <div class="col-md-6">
          <ul class="list-inline text-md-right">
            <li class="list-inline-item"><a href="#">Terms of Use</a></li>
            <li class="list-inline-item"><a href="#">Privacy Policy</a></li>
            <li class="list-inline-item"><a href="#">Contact Us</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
        
        
</body>
</html>